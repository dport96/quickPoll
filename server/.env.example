# QuickPoll Server Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3001  # For external access, use your IP/domain: http://192.168.1.100:3001

# Security
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Poll Configuration
MAX_POLL_OPTIONS=10
POLL_CLEANUP_DAYS=30

# Development Settings
LOG_LEVEL=debug
ENABLE_SWAGGER=true
